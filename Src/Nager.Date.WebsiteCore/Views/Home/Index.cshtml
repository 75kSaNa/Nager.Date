@using Nager.Date.WebsiteCore.Models
@model List<CountryInfo>
@{
    ViewData["Title"] = "Public Holidays";
}

<div class="header">
    <div class="header-content">
        <h1>Public Holidays</h1>
        <p>Public holiday calculation for every year, based on easter sunday, country and county support. Supports more than <strong>90</strong> countries.</p>
    </div>
</div>

<div class="container">
    <h2>Country</h2>

    <div class="row equal">
        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <a href="/PublicHoliday/Country/@item.CountryCode">
                    <div class="thumbnail">
                        <div class="row">
                            <div class="col-xs-8">
                                <h4>@item.Name <small>@item.CountryCode</small></h4>
                                Public Holidays
                            </div>
                            <div class="col-xs-4">
                                @*<span style="border:1px solid #00477a; border-radius:5px; background-color:#003459; color:#ffffff; padding:18px; padding-left:24px; padding-right:24px; display:inline-block;">@item.PublicHolidayCount</span>*@
                                <img src="http://www.countryflags.io/@item.CountryCode/flat/64.png" alt="@item.Name" title="@item.Name">
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>